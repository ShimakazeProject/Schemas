{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://schema.shimakaze.org/json/csf/v2.json",
  "title": "Shimakaze.Sdk.Csf.Json v2",
  "description": "适用于 Shimakaze.Sdk.CSF 的 Json 规范 第二版",
  "type": "object",
  "properties": {
    "protocol": {
      "$ref": "#/definitions/protocol"
    },
    "version": {
      "$ref": "https://schema.shimakaze.org/json/csf/v1.json#/definitions/version"
    },
    "language": {
      "$ref": "https://schema.shimakaze.org/json/csf/v1.json#/definitions/language"
    },
    "data": {
      "$ref": "#/definitions/data"
    }
  },
  "required": [
    "protocol",
    "data"
  ],
  "definitions": {
    "protocol": {
      "title": "使用的规范版本，此数值必须为 2",
      "const": 2
    },
    "simpleLabel": {
      "title": "简单的 CSF 标签",
      "oneOf": [
        {
          "$ref": "https://schema.shimakaze.org/json/csf/v1.json#/definitions/value"
        },
        {
          "$ref": "https://schema.shimakaze.org/json/csf/v1.json#/definitions/valuePair"
        }
      ]
    },
    "multiValueLabel": {
      "title": "拥有多个值的 CSF 标签",
      "type": "object",
      "properties": {
        "values": {
          "$ref": "https://schema.shimakaze.org/json/csf/v1.json#/definitions/values"
        }
      },
      "required": [
        "values"
      ]
    },
    "label": {
      "title": "CSF 标签",
      "oneOf": [
        {
          "$ref": "#/definitions/simpleLabel"
        },
        {
          "$ref": "#/definitions/multiValueLabel"
        }
      ]
    },
    "data": {
      "title": "CSF 文件的主体数据",
      "type": "object",
      "minProperties": 1,
      "maxProperties": 2147483647,
      "patternProperties": {
        "^[\\x20-\\x7E]*$": {
          "$ref": "#/definitions/label"
        }
      }
    }
  }
}