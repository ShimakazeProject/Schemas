{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CSF Json schema",
    "type": "object",
    "properties": {
        "protocol": {
            "type": "integer",
            "minimum": 1
        },
        "head": {
            "type": "object",
            "description": "文件头",
            "properties": {
                "version": {
                    "type": "integer",
                    "minimum": 2,
                    "maximum": 3
                },
                "language": {
                    "oneOf": [
                        {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 9
                        },
                        {
                            "type": "string",
                            "enum": [
                                "en_US",
                                "en_UK",
                                "de",
                                "fr",
                                "es",
                                "it",
                                "jp",
                                "Jabberwockie",
                                "kr",
                                "zh"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "version"
            ]
        },
        "data": {
            "type": "array",
            "description": "文件主体",
            "minItems": 1,
            "maxItems": 2147483647,
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "type": "string",
                        "pattern": "^[\\x20-\\x7E]*$"
                    },
                    "value": {
                        "oneOf": [
                            {
                                "type": "string",
                                "pattern": "^((?!\\r).)*$"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "pattern": "^((?!\\r).)*$"
                                }
                            }
                        ]
                    },
                    "values": {
                        "type": "array",
                        "items": {
                            "oneOf": [
                                {
                                    "type": "string",
                                    "pattern": "^((?!\\r).)*$"
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "pattern": "^((?!\\r).)*$"
                                    }
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "value": {
                                            "oneOf": [
                                                {
                                                    "type": "string",
                                                    "pattern": "^((?!\\r).)*$"
                                                },
                                                {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "pattern": "^((?!\\r).)*$"
                                                    }
                                                }
                                            ]
                                        },
                                        "extra": {
                                            "type": "string",
                                            "pattern": "^[\\x20-\\x7E]*$"
                                        }
                                    },
                                    "required": [
                                        "value"
                                    ]
                                }
                            ]
                        }
                    },
                    "extra": {
                        "type": "string",
                        "pattern": "^\\w*$"
                    }
                },
                "required": [
                    "label"
                ]
            }
        }
    },
    "required": [
        "protocol",
        "head",
        "data"
    ]
}
