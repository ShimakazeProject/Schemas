{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CSF Json v2 schema",
    "type": "object",
    "properties": {
        "protocol": {
            "type": "integer",
            "minimum": 2,
            "maximum": 2
        },
        "version": {
            "type": "integer",
            "minimum": 2,
            "maximum": 3
        },
        "language": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 9
                },
                {
                    "type": "string",
                    "enum": [
                        "en_US",
                        "en_UK",
                        "de",
                        "fr",
                        "es",
                        "it",
                        "jp",
                        "Jabberwockie",
                        "kr",
                        "zh"
                    ]
                }
            ]
        },
        "data": {
            "type": "object",
            "description": "文件主体",
            "minProperties": 1,
            "maxProperties": 2147483647,
            "patternProperties": {
                "^[\\x20-\\x7E]*$": {
                    "oneOf": [
                        {
                            "type": "string",
                            "pattern": "^((?!\\r).)*$"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "pattern": "^((?!\\r).)*$"
                            }
                        },
                        {
                            "type": "object",
                            "additionaProperties": false,
                            "properties": {
                                "value": {
                                    "oneOf": [
                                        {
                                            "type": "string",
                                            "pattern": "^((?!\\r).)*$"
                                        },
                                        {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "pattern": "^((?!\\r).)*$"
                                            }
                                        }
                                    ]
                                },
                                "extra": {
                                    "type": "string",
                                    "pattern": "^\\w*$"
                                },
                                "values": {
                                    "type": "array",
                                    "items": {
                                        "oneOf": [
                                            {
                                                "type": "string",
                                                "pattern": "^((?!\\r).)*$"
                                            },
                                            {
                                                "type": "array",
                                                "items": {
                                                    "type": "string",
                                                    "pattern": "^((?!\\r).)*$"
                                                }
                                            },
                                            {
                                                "type": "object",
                                                "additionaProperties": false,
                                                "properties": {
                                                    "value": {
                                                        "oneOf": [
                                                            {
                                                                "type": "string",
                                                                "pattern": "^((?!\\r).)*$"
                                                            },
                                                            {
                                                                "type": "array",
                                                                "items": {
                                                                    "type": "string",
                                                                    "pattern": "^((?!\\r).)*$"
                                                                }
                                                            }
                                                        ]
                                                    },
                                                    "extra": {
                                                        "type": "string",
                                                        "pattern": "^[\\x20-\\x7E]*$"
                                                    }
                                                },
                                                "required": [
                                                    "value"
                                                ]
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        }
    },
    "required": [
        "protocol",
        "data"
    ]
}